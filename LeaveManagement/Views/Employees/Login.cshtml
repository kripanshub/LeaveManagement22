@model LeaveManagement.Models.Employees;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Employee Login";
}
<h1 style="color:blue">Employee Login</h1>
<br />
<p style="color:red">@TempData["message"]</p>
@using (Html.BeginForm("Login","Employees", FormMethod.Post))
{
    
  <div style="width:300px;">
 <div>
 <label class="control-label">User Name</label>
<input type="text" class="form-control" name="UserName"/>
<span asp-validation-for="UserName" class="text-danger"></span>
</div>
<div>
<label class="control-label">Password</label>
<input type="password" class="form-control" name="Password"/>
<span asp-validation-for="Password" class="text-danger"></span>
</div>

<div>
<label class="control-label">Employee Type</label>

<select name="EmpType" class="form-control">  
<option selected disabled>Select LeaveType</option>  
<option>Employee</option>  
<option>HR</option>                     
</select><br />
<span asp-validation-for="EmpType" class="text-danger"></span>
</div>
<div>
<input type="submit" class="form-control" value="Login"/>
</div>
</div>

}

<h1>@TempData["exception"]</h1>
